{
  "name": "gc",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/MateusPVasconcellos/gc.git",
  "author": "Vasconcellos <mateus.vasconcellos@smartnx.io>",
  "license": "MIT",
  "scripts": {
    "start": "node app.ts",
    "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules app.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:up": "yarn typeorm migration:run -d ./data-source.ts",
    "migration:down": "yarn typeorm migration:revert -d ./data-source.ts",
    "migration:create": "yarn typeorm migration:create ./src/infra/migrations/"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  }
}
